@model List<Customer>
<style>
    main.pb-3{
        border: 1px solid #dee2e6;
        border-radius: 15px;
        padding: 5px;
        display: flex;
        flex-wrap: nowrap;
        flex-direction: column;
        gap: 5px;
        margin-bottom: 16%;
    }

    input {
        all: unset;
        width: 100%;
        padding: 3px 10px 5px 10px;
        border-radius: 15px;
        box-sizing: border-box;
        border: 1px solid gray;
    }

    table.table {
        width: 100%;
        margin-bottom: unset;
    }

    main > div{
        border: 1px solid gray;
        border-radius: 15px;
    }

    .table > :not(caption) > * > * {
        border-bottom: unset;
    }

    tbody tr {
        border-bottom: 1px solid #dee2e6;
    }

    tbody tr:last-of-type {
        border-bottom: unset;
    }

    tbody td:not(:first-of-type), thead th:not(:first-of-type) {
        padding-left: 3%;
        width: 200px;
    }
</style>

<h1>Customer Management</h1>

@if (User.IsInRole("admin"))
{
    @Html.ActionLink("Add a Customer", "Create", null, new { @class = "btn btn-primary" })
}

<input id="q" type="search" placeholder="Search on name" onkeyup="updatetable()" />
<div>
    <table id="qtable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">+</a>
                        @if (User.IsInRole("admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">| Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id"> | Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function updatetable() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("q");
        filter = input.value.toLowerCase();
        table = document.getElementById("qtable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            console.log(tr[i]);
            tr[i].style.display = "";
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                txtValue = td.innerText.split(' ')[0].toLowerCase();
                if (txtValue.indexOf(filter) > -1 && txtValue.startsWith(filter)) {
                    tr[i].style.display = "";
                } else {
                    console.log(txtValue.indexOf(filter) + " ; " + txtValue + " ; " + filter + " ; " + txtValue.startsWith(filter))
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>