@model Ticket

<h1>Edit Ticket</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" asp-items="ViewBag.Types" class="form-control"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Project" class="control-label"></label>
        <input asp-for="Project" class="form-control" />
        <span asp-validation-for="Project" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority" class="control-label"></label>
        <select asp-for="Priority" asp-items="ViewBag.Priorities" class="form-control"></select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" asp-items="ViewBag.Statuses" class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Customer" class="control-label"></label>
        <input asp-for="Customer" class="form-control" readonly="readonly" type="hidden" />
        <textarea class="form-control" readonly="readonly" name="CustomerName">@ViewBag.CustomerName</textarea>
    </div>

    <div class="form-group">
        <label asp-for="CreatedBy" class="control-label"></label>
        <input asp-for="CreatedBy" class="form-control" readonly="readonly" type="hidden" />
        <textarea class="form-control" readonly="readonly" name="Created_By">@ViewBag.CreatedBy</textarea>
    </div>

    <div class="form-group">
        <input asp-for="CreatedOn" class="form-control" readonly="readonly" type="hidden" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
