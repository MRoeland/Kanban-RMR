@model Ticket

<h1>Edit Ticket</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="TypeId" asp-items="ViewBag.Types" class="form-control"></select>
        <span asp-validation-for="TypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Project" class="control-label"></label>
        <select asp-for="ProjectId" asp-items="ViewBag.Projects" class="form-control"></select>
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority" class="control-label"></label>
        <select asp-for="PriorityId" asp-items="ViewBag.Priorities" class="form-control"></select>
        <span asp-validation-for="PriorityId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        @if (User.IsInRole("admin"))
        {
            <select asp-for="StatusId" asp-items="ViewBag.Statuses" class="form-control"></select>
            <span asp-validation-for="StatusId" class="text-danger"></span>
        }
        else
        {
            <input asp-for="StatusId" class="form-control" readonly="readonly" type="hidden" />
            <textarea class="form-control" readonly="readonly" name="Status">@ViewBag.Status</textarea>
        }
    </div>

    <div class="form-group">
        <input asp-for="Index" class="form-control" readonly="readonly" type="hidden" />
    </div>

    <div class="form-group">
        <label asp-for="Customer" class="control-label"></label>
        <input asp-for="CustomerId" class="form-control" readonly="readonly" type="hidden" />
        <textarea class="form-control" readonly="readonly" name="CustomerName">@ViewBag.CustomerName</textarea>
    </div>

    <div class="form-group">
        <label asp-for="CreatedBy" class="control-label"></label>
        <input asp-for="CreatedBy" class="form-control" readonly="readonly" type="hidden" />
        <textarea class="form-control" readonly="readonly" name="Created_By">@ViewBag.CreatedBy</textarea>
    </div>

    <div class="form-group">
        <input asp-for="CreatedOn" class="form-control" readonly="readonly" type="hidden" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
